        },
        {
            "type": "image_picker",
            "label": "Image Pick",
            "id": "bg-image"
        },
        {
            "type": "richtext",
            "label": "Add title",
            "id": "title",
            "default": "<p>For The World We Want.</p>"
        },
           {
            "type":"color",
            "id":"text-color",
            "label":"Text color"
        },
        {
            "type": "text",
            "label": "Add description",
            "id": "desc",
            "default": "We're a responsible luxury fashion label sharing 90% of our profits with people and causes we believe in. We're cultivating a culture of beauty that goes beyond our clothing, pioneering a new business culture rooted in community. All we do is rooted in people, planet and our values making tangible strides for the world we want."
          
        },
      
      {
            "type": "richtext",
            "label": "Add caption",
            "id": "caption"
        
        },
      {
            "type": "font",
            "label": "Add caption",
            "id": "captionFont"
        
        },
      {
                "type": "select",
                "id": "text-position",
                "label": "Text Position",
                "options": [
                  {
                    "value": "flex-start",
                    "label": "Top"                          
                  },
                  {
                    "value": "center",
                    "label": "Middle"                          
                  },
                  {
                    "value": "flex-end",
                    "label": "Bottom"                          
                  }
                ],
                "default": "center"                    
      }
       
      

            ]
        },
        {
            "type": "spacer-block",
            "name": "Spacer",
              "settings":[
                {
                    "type": "range",
                    "id": "spacer-height",
                    "label": "Spacer Height",
                    "min": 0,
                    "max": 200,
                    "step": 5,
                    "unit": "px",
                    "default": 30
                }
              ]
        }
    ],
    "presets": [
        {
         "category":"content",
           "name":"Hero Single Image",
           "blocks": [
        {
          "type": "image-block"
        },
        {
          "type": "spacer-block"
        }
      ]
        }
    ]
}
