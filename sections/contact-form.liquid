  .page-title {
    font-size: 70px;
    margin-bottom: 20px;
  }
}

@media (max-width: 768px) {
  .contact-us-content {
    margin: 0 20px;
  }
  .contact-us-content .page-links {
    padding-left: 0;
  }
  .page-links {
    padding-left: 17px;
    height: max-content;
    position: relative;
    top: 0px;
    padding-top: 0px;
  }
  .page-link {
    margin: 0 5px;
  }
  .page-title {
    font-size: 70px;
    margin-bottom: 20px;
  }
  .contact-us-content {
    flex-direction: column;
  }
}

@media (max-width: 368px) {
  .contact-us-content .page-title {
    font-size: 60px;
  }
}


