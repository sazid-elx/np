<script>

(function atPollForjQuery() {
    if (window.jQuery !== undefined) {
        var $ = window.jQuery;
        if ($("select.contact-form").length > 0) {
          $('#contact_form .contact-order').parent().css( "display", "none" );
          $('#contact_form .commonHide').parent().css( "display", "none" );
            try {
                $('select.contact-form').on('change', function() {
                  
                  if(this.value == "Order Query" || this.value == "Returns or Exchange"){
                    $('#contact_form .commonHide').parent().css( "display", "none" );
                  	$('#contact_form .contact-order').parent().css( "display", "block" );
                  }
                  else if(this.value == "Press"){
                    $('#contact_form .commonHide').parent().css( "display", "none" );
                  	$('#contact_form .publisher').parent().css( "display", "block" );
                  }
                  else if(this.value == "Wholesale"){
                    $('#contact_form .commonHide').parent().css( "display", "none" );
                  	$('#contact_form .company').parent().css( "display", "block" );
                  }
                  else if(this.value =="Affiliate"){
                    $('#contact_form .commonHide').parent().css( "display", "none" );
                  	$('#contact_form .website').parent().css( "display", "block" );
                  }
                  else{
                  	$('#contact_form .commonHide').parent().css( "display", "none" );
                  }
                });

            } catch (err) {
                // console.log('TRY ERROR: ' + err);
            }
        } else {
            setTimeout(atPollForjQuery, 25);
        }
    } else {
        setTimeout(atPollForjQuery, 25);
    }
})();  
    
  
</script>