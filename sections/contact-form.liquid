{%- assign blockId = block.id -%}
{% if product %}
  {%- assign blockId = block.id | append: product.id -%}
{% endif %}

<div class="index-section">
  <div class="page-width">

    <div class="grid contact-us-content">
      <div class="grid-item medium-up--two-fifths page-links">
        <a class="page-link {% if request.path == '/pages/contact-us' %}active{% endif %}" href="/pages/contact-us" data-handle="none">Contact Us</a>
        <a class="page-link {% if request.path == '/pages/new-faq' %}active{% endif %}" href="/pages/new-faq" data-handle="none">FAQs</a>
<!--         <a class="page-link" href="#" data-handle="none">Returns, Refunds & Exchanges</a> -->
<!--         <a class="page-link" href="#" data-handle="none">Payment, Promos & Giftcards</a> -->
      </div>
      <div class="grid__item{% if block.settings.narrow_column %} medium-up--three-quarters medium-up--push-one-eighth{% endif %} medium-up--three-fifths">
        <header>
          <div class="np-h1 page-title">Contact Us</div>
        </header>
        <div class="np-h3 description">Any questions? We are here to help. We respond to each email within 24 hours, Monday to Friday, excluding bank holidays.</div>

        <div class="form-vertical">
          {% form 'contact' %}
            <div class="required-text">*Required</div>

            <div class="grid grid--small">
              <div class="grid__item one-whole">
                <label class="input-label" for="ContactFormFName-{{ blockId }}">{{ 'contact.form.firstname' | t }}<span>*</span></label>
                <input placeholder="First Name*" type="text" id="ContactFormFName-{{ blockId }}" class="input-full.form-vertical  contact-input" name="contact[firstname]" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.first_name }}{% endif %}" required>
              </div>
              
              <div class="grid__item one-whole">
                <label class="input-label" for="ContactFormLName-{{ blockId }}">{{ 'contact.form.lastname' | t }} <span>*</span> </label>
                <input placeholder="Last Name*" type="text" id="ContactFormLName-{{ blockId }}" class="input-full.form-vertical  contact-input" name="contact[lastname]" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.last_name }}{% endif %}" required>
              </div>
              
              <div class="grid__item one-whole">
                <label class="input-label" for="ContactFormEmail-{{ blockId }}">{{ 'contact.form.email' | t }}<span>*</span></label>
                <input placeholder="Email*" type="email" id="ContactFormEmail-{{ blockId }}" class="input-full.form-vertical  contact-input" name="contact[email]" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
              </div>
              
             
                <div class="grid__item one-whole">
                  <label for="ContactFormPhone-{{ blockId }}">{{ 'contact.form.phone' | t }} <span>*</span> </label>
                  <input placeholder="Phone Number*" type="tel" id="ContactFormPhone-{{ blockId }}" class="input-full.form-vertical  contact-input" name="contact[phone]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" required>
                </div>
           
              
              <div class="grid__item one-whole">
                <label class="input-label" for="ContactFormSubject-{{ blockId }}">{{ 'contact.form.subject' | t }}<span>*</span></label>
                <select id="ContactFormSubject-{{ blockId }}" class="contact-input input-full contact-form" name="contact[subject]" required>
<!--                    <option value="">Subject</option> -->
                  <option value="Product Query">Product Query</option>
                  <option value="Order Query">Order Query</option>
                  <option value="Returns or Exchange">Returns or Exchange</option>
                  <option value="Press">Press</option>
                  <option value="Wholesale">Wholesale</option>
                  <option value="Affiliate">Affiliate</option>
                  <option value="8">Other</option>
                </select>
              </div>
              
              <div class="grid__item one-whole">
                <label class="input-label" for="ContactFormOrder-{{ blockId }}">{{ 'contact.form.order' | t }}</label>
              	<input placeholder="Order Now" type="text" id="ContactFormOrder-{{ blockId }}" class="input-full contact-order commonHide contact-input" name="contact[order]" value="{% if form.order %}{{ form.order }}{% endif %}">
              </div>
              <div class="grid__item one-whole">
                <label class="input-label" for="ContactFormPublisher-{{ blockId }}">{{ 'contact.form.publisher' | t }}</label>
              	<input placeholder="Publisher" type="text" id="ContactFormPublisher-{{ blockId }}" class="input-full publisher commonHide contact-input" name="contact[publisher]" value="{% if form.publisher %}{{ form.publisher }} {% endif %}">
              </div>
              <div class="grid__item one-whole">
                <label class="input-label" for="ContactFormCompany-{{ blockId }}">{{ 'contact.form.company' | t }}</label>
              	<input placeholder="Company" type="text" id="ContactFormCompany-{{ blockId }}" class="input-full company commonHide contact-input" name="contact[company]" value="{% if form.company %}{{ form.company }} {% endif %}">
              </div>
              <div class="grid__item one-whole">
                <label class="input-label" for="ContactFormWebsite-{{ blockId }}">{{ 'contact.form.website' | t }}</label>
              	<input placeholder="Messenger*" type="text" id="ContactFormWebsite-{{ blockId }}" class="input-full website commonHide contact-input" name="contact[website]" value="{% if form.website %}{{ form.website }} {% endif %}">
              </div>
              
            </div>

            <label class="input-label" for="ContactFormMessage-{{ blockId }}">{{ 'contact.form.message' | t }} <span>*</span> </label>
            <textarea required rows="17"  placeholder="Message" id="ContactFormMessage-{{ blockId }}" class="input-full ContactFormMessage" name="contact[body]" >{% if form.body %}{{ form.body }}{% endif %}</textarea>

            <div class="submission-with-error">
              <button type="submit" class="update-account-link">
                {{ 'contact.form.send' | t }}
              </button>
              
              <ul class="error-message-wrapper" >          
                    {% for error in form.errors %}
                <li class="error-message">{% if error == 'form' %}
                 {{ form.errors.messages[error] }}
               {% else %}
                    Incomplete information: {{ form.errors.translated_fields[error] }} Incomplete
                 {% endif %}
               </li>    
                      {% endfor %}
             </ul>
            
             
             
            
            </div>
            {% if form.posted_successfully? %}
              <div class="success-section">
                <button type="button" class="update-account-link">
                  Thank You
                </button>
                <div class="np-h10">We respond to all messages within 24 hours, Monday to Friday.</div>
              </div>
            {% endif %}

          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
{% style %}

