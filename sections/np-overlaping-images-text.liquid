<section class="section-wrapper-{{ section.id }} np-page-width">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image-text-block' %}
        <div class="block-{{ block.id }}">
          <div class="first-row">
            <div class="first-row-mobile-button np-h6">
              <a href="{{ block.settings.first-row-mobile-button-url }}">
                {{ block.settings['first-row-mobile-button-text'] }}
              </a>
            </div>
            <div class="first-row-text np-h5">
              {{ block.settings['first-row-text'] }}
              <div class="first-text-button">
                <a href="{{ block.settings.first-button-url }}">
                  {{ block.settings['first-button-text'] }}
                </a>
                <div class="border-bottom"></div>
              </div>
            </div>
            <div class="first-row-image">
              {% comment %} <img
                class="first-row-image-{{ block.id }}"
                src="{{ block.settings.first-row-image | img_url: "master" }}"
              > {% endcomment %}
              {% liquid assign image = block.settings.first-row-image %}
              {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
              <img class="first-row-image-{{ block.id }} lazyload"
              data-src="{{ img_url }}"
              data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
              data-aspectratio="{{ image.aspect_ratio }}"
              data-sizes="auto"
              alt="{{ image.alt }}"
              >
              <div class="first-row-image-text-{{ block.id }}">
                <p>
                  {{ block.settings['first-row-image-text'] }}
                  <a class="np-h6" href="{{ block.settings.first-row-image-url }}">Shop Here</a>
                </p>
              </div>
            </div>
          </div>
          <div class="second-row">
            <div class="second-row-image">
              {% comment %} <img
                class="second-row-image-{{ block.id }}"
                src="{{ block.settings.second-row-image| img_url: "master" }}"
              > {% endcomment %}
              {% liquid assign image = block.settings.second-row-image %}
              {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
              <img class="second-row-image-{{ block.id }} lazyload"
              data-src="{{ img_url }}"
              data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
              data-aspectratio="{{ image.aspect_ratio }}"
              data-sizes="auto"
              alt="{{ image.alt }}"
              >
              <div class="second-row-image-text-{{ block.id }}">
                <p>
                  {{ block.settings['second-row-image-text'] }}
                  <a class="np-h6" href="{{ block.settings.Second-row-image-url }}">Shop Here</a>
                </p>
              </div>
            </div>
            <div class="second-row-text np-h5">
              {{ block.settings['second-row-text'] }}
              <div class="second-text-button">
                <a href="{{ block.settings.second-button-url }}">
                  {{ block.settings['second-button-text'] }}
                </a>
                <div class="border-bottom"></div>
              </div>
            </div>
          </div>
        </div>
      {% when 'spacer-block' %}
        <div class="spacer-{{ block.id }}"></div>
    {% endcase %}
  {% endfor %}
</section>
<style>
  .np-page-width {
      max-width: 1440px;
      margin: 0 auto;
  }
  .section-wrapper-{{ section.id }} {
      padding: 0 {{ section.settings.padding-both-sides }}px;
  }

  {% for block in section.blocks %}
  {% case block.type %}
  {% when 'image-text-block' %}
      .first-row-mobile-button{
          display: none;
      }
      .first-text-button{
          margin-top:71.71px;
          width:{{ block.settings.first-row-button-size }}px;
          text-align: center;
      }
      .second-text-button{
          margin-top:66px;
          width:{{ block.settings.second-row-button-size }}px;
          text-align: center;
      }
      .first-text-button a, .second-text-button a{
          font-family: 'Intervogue';
          font-style: normal;
          font-weight: 400;
          font-size: 12.5px;
          line-height: 21px;
          letter-spacing: 0.05em;
          text-transform: uppercase;
          color: #2B2725;
      }
  .first-text-button .border-bottom, .second-text-button .border-bottom{
  margin-top: 12.86px;
  width: 100%;
  border: 1px solid #2B2725;
  }
  .first-text-button .border-bottom{
  width:{{ block.settings.first-row-button-size }}px;
  }
  .second-text-button .border-bottom{
      width: {{ block.settings.second-row-button-size }}px;
  }
  .block-{{ block.id }} {
      display: flex;
      flex-direction: column;
  }
  .block-{{ block.id }} .first-row {
      display: flex;
      justify-content: flex-end;
      gap:10%;
  }
  .block-{{ block.id }} .second-row {
      display: flex;
      justify-content: flex-start;
      gap:10%;
  }
  .first-row-image, .second-row-image {
      width: 55%;
  }
  .first-row-text, .second-row-text {
      width: 45%;
      text-align: justify;
  }
  .first-row-image-{{ block.id }}, .second-row-image-{{ block.id }}{
      width:100%;
  }
  .block-{{ block.id }} .second-row-image {
      margin-top: -130px;
  }
  .block-{{ block.id }} .second-row-text {
      width: 606px;
    padding-left: 50px;
  }
  .block-{{ block.id }} .first-row-text{
    margin-left: 90px;
  }
  .block-{{ block.id }} .first-row-text, .block-{{ block.id }} .second-row-text   {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
  }
  .first-row-image-text-{{ block.id }} p, .second-row-image-text-{{ block.id }} p{
      font-family: 'Intervogue';
      font-style: normal;
      font-weight: 400;
      font-size: 12px;
      line-height: 21px;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      color: rgba(43, 39, 37, 0.6);
  }
  .first-row-image-text-{{ block.id }} p a, .second-row-image-text-{{ block.id }} p a{
      text-decoration: underline;
      color: rgba(43, 39, 37, 0.6);
  }
  {% if block.settings.show-first-image-text == false %}
  .first-row-image-text-{{ block.id }}{
   display:none;
  }
  {% endif %}
  {% if block.settings.show-second-image-text == false %}
  .second-row-image-text-{{ block.id }}{
   display:none;
  }
  {% endif %}
  {% if block.settings.show-first-image-button == false %}
  .first-text-button{
   display:none;
  }
  {% endif %}
  {% if block.settings.show-second-image-button == false %}
  .second-text-button{
   display:none;
  }
  {% endif %}

     @media only screen and (max-width: 1260px){
  .block-{{ block.id }} .first-row-text{
    margin-left: 0px;
  }
    .first-text-button .border-bottom, .second-text-button .border-bottom{
  margin-top: 0px;
  }
     .section-wrapper-{{ section.id }} {
      padding: 0 20px;
  }
  }

      @media only screen and (max-width: 1200px){
  .block-{{ block.id }} .second-row-text {
    padding-left: 0px;
  }
  }
     
      @media only screen and (max-width: 1050px){
  .block-{{ block.id }} .second-row-image {
      margin-top: -70px;
  }
      .block-{{ block.id }} .first-text-button{
          margin-top:40px;
        }
    .first-row-image-{{ block.id }}{
    margin-top:70px;
    }
  }
      @media only screen and (max-width: 950px){
    .block-{{ block.id }} .first-row,.block-{{ block.id }} .second-row {
      gap:8%;
  }
  .block-{{ block.id }} .second-row-text {
      width: 650px;
    padding-right:30px;
  }
  .block-{{ block.id }} .first-row-text{
      width: 500px;
  }

  }
      @media only screen and (max-width: 900px){
  .block-{{ block.id }} .second-row-image {
      margin-top: -40px;
  }

  }
    
  @media only screen and (max-width: 768px){
      .np-page-width {
      padding: 0 20px;
      }
  .block-{{ block.id }} .second-row{
      display: block;
  }
  .block-{{ block.id }} .first-row{
      display: flex;
      flex-direction: column-reverse;
  }
  .block-{{ block.id }} .first-row-text, .block-{{ block.id }} .second-row-text{
      width: 100%;
    margin-top: 25px;
    padding-right:0px;
  }
  .first-text-button, .second-text-button{
    margin: 35px auto;
  }
  .block-{{ block.id }} .second-row-image {
      margin-top: 0px;
  }

  .first-row-image, .second-row-image {
      width: 100%;
  }

    .first-row-image-{{ block.id }}{
    margin-top:30px;
    }


    
    .first-text-button .border-bottom, .second-text-button .border-bottom{
margin-top:0px;
  }
  }

  {% when "spacer-block" %}
      .section-wrapper-{{ section.id }}  .spacer-{{ block.id }} {
          height: {{ block.settings.spacer-height }}px;
      }
  {% endcase %}
  {% endfor %}
</style>
