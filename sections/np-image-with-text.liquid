<section class="section-wrapper-{{ section.id }} np-page-width">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'image-text-block' %}
        <div class="block-{{ block.id }}">
          <div class="image-part">
            <div class="image">
              {% comment %} <img src="{{ block.settings.image | img_url: 'grande' }}" alt="" width="" height="" loading="lazy"> {% endcomment %}
              {% liquid assign image = block.settings.image %}
              {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
              <img width="466" height="622" class="lazyload"
              data-src="{{ img_url }}"
              data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
              data-aspectratio="{{ image.aspect_ratio }}"
              data-sizes="auto"
              alt="{{ image.alt }}"
              >
            </div>
            <div class="caption np-h6">
              <span> {{ block.settings.caption }}</span>
            </div>
          </div>
          <div class="text-part">
            <div class="text-part-inner">
              <span class="title np-h2"> {{ block.settings.title }}</span>
              <span class="main-desc np-h3"> {{ block.settings['main-desc'] }}</span>
              <span class="desc np-h5"> {{ block.settings.desc }} </span>
              <a href="{{ block.settings.btn-url }}" class="learn-more-btn"> {{ block.settings['btn-text'] }} </a>
            </div>
          </div>
        </div>
      {% when 'spacer-block' %}
        <div class="spacer-{{ block.id }}"></div>
    {% endcase %}
  {% endfor %}
</section>
<style>
  .np-page-width {
          max-width: 1440px;
          margin: 0 auto;
      }
      @media (max-width: 768px) {
          .np-page-width {
              padding: 0 20px;
          }
      }
      {% for block in section.blocks %}
          {% case block.type %}
              {% when "image-text-block" %}
                  .block-{{ block.id }} .caption  {
                      display: none;
                  }
                  .block-{{ block.id }} .main-desc  {
                      display: none;
                  }
                  .block-{{ block.id }} .desc  {
                      display: none;
                  }
                  .block-{{ block.id }} .title {
                      display: none;
                  }
                  .block-{{ block.id }} .learn-more-btn  {
                      display: none;
                  }
               .block-{{ block.id }}  {
                  display: flex;
                  flex-direction: row;
                  justify-content: space-between;
                  padding:0 100px 0 120px;
               }
               .block-{{ block.id }} .image-part   {
                  width: 32%;
            display:flex;
            flex-direction: column;
            align-items:start;
               }
               .block-{{ block.id }} .image-part .caption {
                  opacity: 0.4;
               }
               .block-{{ block.id }} .text-part  {
                  display: flex;
                 align-content: center;
                  flex-wrap: wrap;
                  background-color: {{ block.settings.text-bg-color }};
                  width: 58%;
               }
               .block-{{ block.id }} .text-part .text-part-inner {
                  width: 80%;
               }
               .block-{{ block.id }} .text-part a {
                  text-decoration: none;
               }
               .block-{{ block.id }} .text-part .learn-more-btn p {
                  display: block;
                  padding-bottom: 7px;
                  border-bottom: 1px solid black;
               }
               .block-{{ block.id }} .text-part .main-desc ,  .block-{{ block.id }} .text-part .title {
                  width: 100%;
               }
               .block-{{ block.id }} .text-part .desc  {
                  margin: 25px 0;
            width: 84%;
               }
               .block-{{ block.id }} img  {
               }
               .title {
                  margin-bottom: 56px;
               }
               .block-{{ block.id }} .text-part .desc {
               }
               .main-desc {
                  margin-bottom: 51px;
               }
               {% if block.settings.show-title %}
                  .block-{{ block.id }} .title {
                      display: block;
                  }
               {% endif %}
               {% if block.settings.show-caption %}
                  .block-{{ block.id }} .caption {
                      display: block;
                  }
               {% endif %}
               {% if block.settings.show-btn %}
                  .block-{{ block.id }} .learn-more-btn {
                      display: block;
                  }
               {% endif %}
               {% if block.settings.show-main-desc %}
                  .block-{{ block.id }} .main-desc {
                      display: block;
                  }
               {% endif %}
               {% if block.settings.show-desc %}
                  .block-{{ block.id }} .text-part .desc {
                      display: block;
                  }
              {% endif %}
               {% if block.settings.image-right %}
                  .block-{{ block.id }}  {
                      flex-direction: row-reverse;
                   }
               {% endif %}
             @media only screen and (max-width: 1200px) {
            .block-{{ block.id }}  {
                 padding: 0 29px;
               }
            .block-{{ block.id }} .image-part   {
                  width: 50%;
               }
              .block-{{ block.id }} .text-part  {
                  width: 50%;
               }
             }
               @media only screen and (max-width: 1100px) {
             .block-{{ block.id }} .main-desc  {
                      font-size: 20px;
                  }
                  .block-{{ block.id }} .desc  {
                      font-size: 12px;
                  }
             }
                         @media only screen and (max-width: 1000px) {
             .block-{{ block.id }} .title  {
                      font-size: 50px;
            margin-bottom: 35px;
                  }
             .block-{{ block.id }} .main-desc  {
                      font-size: 16px;
            margin-bottom: 35px;
                  }
                  .block-{{ block.id }} .desc  {
                      font-size: 12px;
                  }
             }
             @media only screen and (max-width: 900px) {
             .block-{{ block.id }} .title  {
                      font-size: 45px;
            margin-bottom: 25px;
                  }
             .block-{{ block.id }} .main-desc  {
                      font-size: 14px;
            margin-bottom: 25px;
                  }
                  .block-{{ block.id }} .desc  {
                      font-size: 10px;
                  }
             }
               @media only screen and (max-width: 768px) {
               .block-{{ block.id }}  {
                 flex-direction: column;
            width:100%;
            padding:0;
               }
               .block-{{ block.id }} .image-part   {
                  width: 100%;
               }
               .block-{{ block.id }} .text-part  {
                  width: 100%;
               }
               .block-{{ block.id }} .text-part .text-part-inner {
                  width: 100%;
               }
                  .block-{{ block.id }} .image-part .caption {
                      font-size: 12px;
                   }
                   .block-{{ block.id }} .text-part .title {
                      font-size: 69px;
                     margin-bottom: 40px;
                     margin-top: 40px;
                   }
                   .block-{{ block.id }} .text-part .desc {
                      font-size: 16px;
                   }
                   .block-{{ block.id }} .text-part .main-desc {
                      font-size: 26px;
  margin-bottom: 50px;
                   }
                   .block-{{ block.id }} .image-part .image  {
                      display: flex;
                      justify-content: center;
                     width:100%;
                   }
                   .block-{{ block.id }} .image-part .image img  {
                      width: 100%;
                     height:100%;
                   }
               }

    @media (max-width:450px){
      .block-{{ block.id }} .text-part .title {
                      font-size: 52px;
                     margin-bottom: 20px;
                     margin-top: 20px;
                   }
    }
              {% when "spacer-block" %}
                  .section-wrapper-{{ section.id }}  .spacer-{{ block.id }} {
                      height: {{ block.settings.spacer-height }}px;
                  }
          {% endcase %}
      {% endfor %}
</style>
