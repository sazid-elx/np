<section class="hero-section-{{ section.id }} affiliation">
    <div class="hero-main-title{% if section.settings.title-font-style == true %} italic-font-title{% endif %}">
      <p>{{ section.settings.hero-title }}</p>
    </div>
    <div class="hero-sub-title{% if section.settings.subtitle-font-style == true %} italic-font-subtitle{% endif %}">
      <p>{{ section.settings.sub-title }}</p>
    </div>
    <div class="hero-description{% if section.settings.description-font-style == true %} italic-font-description{% endif %}">
      {{ section.settings.description }} 
    </div>
    <div class="hero-button {% if section.settings.show_button == false %}hide{% endif %}">
      <a class="hero-btn" href="{{ section.settings.button_link }}">{{ section.settings.btn-text }}</a>
    </div>

    {% for block in section.blocks %}
        {% case block.type %}
          {% when 'spacer-block' %}
              <div class="spacer-{{ block.id }}">
                  
              </div>
        {% endcase %}
   {% endfor %}
</section>


<style>
  @media screen and (max-width: 768px){
      #MainContent{
         margin-top: 70px;
     }
  }
    @media screen and (max-width: 600px){
      #MainContent{
         margin-top: 115px;
     }
  }
  .hero-section-{{ section.id }}.affiliation{
    max-width: 934px;
    margin: 0 auto;
    padding: 46px 0px 0px 0px;
  }
  .hero-section-{{ section.id }}.affiliation .hero-main-title p{
    max-width: 934px;
    width: 100%;
    font-family: 'Silvana';
    font-weight: 400;
    font-size: {{ section.settings.font-size-title | append: 'px' }};
    line-height: 105px;
    letter-spacing: -0.03em;
    color: {{ section.settings.title-color }};
    padding-bottom: 67px;      
  }
  .hero-section-{{ section.id }}.affiliation .hero-sub-title p{
    font-family: 'Silvana';
    font-weight: 400;
    font-size: {{ section.settings.font-size-subtitle | append: 'px' }};
    line-height: 36px;
    letter-spacing: -0.01em;   
    color: {{ section.settings.subtitle-color }};
    max-width: 585px;
    width: 100%;
    padding-bottom: 46px; 
  }
  .hero-section-{{ section.id }}.affiliation .hero-description p{
