  {% for block in section.blocks %}
        {% case block.type %}
          {% when 'spacer-block' %}
            .hero-section-{{ section.id }}.affiliation .spacer-{{ block.id }} {
              height: {{ block.settings.spacer-height }}px; 
            }
    {% endcase %}
  {% endfor %}
</style>

