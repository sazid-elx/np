<section class="section-wrapper-{{ section.id }} np-page-width">
  <p class="section-title np-h8">{{ section.settings.section-title }}</p>
  <div class="single-product-block">
    {% for block in section.blocks %}
        {% case block.type %}
            {% when "image-block" %}
            <div class="image-block-{{ block.id }}">           
              <a class="image-block" href="{{ block.settings.image-url }}">
                {% comment %} <img src="{{ block.settings.bg-image | img_url: 'master' }}" alt=""> {% endcomment %}
                {% liquid assign image = block.settings.bg-image %}
                {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                <img class="image-{{ block.id }} lazyload"
                data-src="{{ img_url }}"
                data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
                data-aspectratio="{{ image.aspect_ratio }}"
                data-sizes="auto"
                alt="{{ image.alt }}"
                >
              </a>           
            
              <div class="image-details-{{ block.id }}">
                <div class="product-details">
                  <a href="{{ block.settings.product-url }}" class="np-h10"> {{ block.settings.product-title }}</a>
                  <a href="{{ block.settings.product-url }}" class="product-fabric"> {{ block.settings.product-fabric }}</a>
                </div>
                <div class="product-price np-h6">
                  {{ block.settings.products-price }}
                </div>
              </div>                     
          </div>                    
          {% endcase %}
    {% endfor %}
  </div>
    {% for block in section.blocks %}
        {% case block.type %}
          {% when 'spacer-block' %}
                <div class="spacer-{{ block.id }}">                </div>        
          {% endcase %}
    {% endfor %}
</section>

<style>
  .np-page-width {
    max-width: 1440px;
    margin: 0 auto;
  }

  .section-wrapper-{{ section.id }}.np-page-width .single-product-block{
    display:flex;
    justify-content:center;
    align-items:start;
  }
  
  .section-wrapper-{{ section.id }} .section-title{
    margin-bottom:33px;
    text-align:center;
  }
  @media (max-width:1024px){
   .section-wrapper-{{ section.id }}.np-page-width {
    padding: 0 40px;
  }
      
  }
  @media (max-width:768px){
   .section-wrapper-{{ section.id }}.np-page-width {
    padding: 0 20px;
  }

    .section-wrapper-{{ section.id }}.np-page-width .single-product-block{
    flex-wrap: wrap;
    justify-content:start;
    align-items:flex-start;
      gap:2%;
  }
  }

  {% for block in section.blocks %}
        {% case block.type %}
          {% when "image-block" %}
             .image-block-{{ block.id }}{
               max-width:355px;
               margin-right:5px;
/*                width: 100%; */
             }   
  
             .image-block-{{ block.id }} .image-block img{
               width:100%;
/*                aspect-ratio:347/436; */
               height: 100%;
               max-width: 347px;
               max-height: 436px;
             }                 

            .image-details-{{ block.id }}{
              display:flex;
              justify-content:space-between;
              align-items:baseline;
              width:90%;
              margin:0 auto;
            }
            .image-details-{{ block.id }} .product-details{
              display:flex;
              flex-direction:column;
              justify-content:start;
              align-items:flex-start;
            }
            .image-details-{{ block.id }} .product-fabric{
              font-family: 'Silvana';
              font-style: normal;
              font-weight: 400;
              font-size: 12px;
              line-height: 18px;
              letter-spacing: 0.05em;
              color: #2B2725;
            }

          @media (max-width:768px){
             .image-block-{{ block.id }}{
               max-width:49%;
               height:auto;
               margin-right:0;
               margin-bottom:10px;
             } 
          }
          
          {% when 'spacer-block' %}
              .section-wrapper-{{ section.id }}  .spacer-{{ block.id }} {
                  height: {{ block.settings.spacer-height }}px;
              }       
          {% endcase %}
    {% endfor %}
    
    }
</style>

{% schema %}
  {
    "name": "Fibre Product",
    "settings": [
       {
          "type":"text",
          "id":"section-title",
          "label":"Section Title",
          "default":"Shop Cotton"
        }
    ],
    "blocks":[
      {
         "type": "image-block",
         "name": "Image",
         "settings": [
           {
                "type": "image_picker",
                "label": "Product Image",
                "id": "bg-image"
            },
            {
                "type":"url",
                "id":"image-url",
                "label":"Image URL",
                "default":"/"
              },
            {
                "type":"text",
                "id":"product-title",
                "label":"Product Title",
                "default":"Hydra Blouse in Pine Bark"
              },
            {
                "type":"url",
                "id":"product-url",
                "label":"Product URL",
                "default":"/"
              },
            {
                "type":"text",
                "id":"product-fabric",
                "label":"Product Fabric Type",
                "default":"Tencel"
              },
            {
                "type":"text",
                "id":"products-price",
                "label":"Product Price",
                "default":"Â£240"
              }
         ]
      },
      {
            "type": "spacer-block",
            "name": "Spacer",
              "settings":[
                {
                    "type": "range",
                    "id": "spacer-height",
                    "label": "Spacer Height",
                    "min": 0,
                    "max": 200,
                    "step": 5,
                    "unit": "px",
                    "default": 30
                }
              ]
        }
    ],
    "presets": [
        {
         "category":"content",
         "name":"Fibre Product Show",
         "blocks": [
                {
                  "type": "image-block"
                },
                {
                  "type": "spacer-block"
                }
      ]
        }
    ]
  }
{% endschema %}
