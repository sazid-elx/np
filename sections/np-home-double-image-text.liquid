<section class="section-wrapper-{{ section.id }} np-page-width">    
{% for block in section.blocks %}
        {% case block.type %}
            {% when 'image-text-block' %} 
  <div class="block-{{ block.id }}">    
    <div class="first-row">        
      <div class="first-row-image">        
        {% comment %} <img class="first-row-image-{{ block.id }}" src="{{ block.settings.first-row-image | img_url: "master" }}">  {% endcomment %}
        {% liquid assign image = block.settings.first-row-image %}
        {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="first-row-image-{{ block.id }} lazyload"
        data-src="{{ img_url }}"
        data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
        data-aspectratio="{{ image.aspect_ratio }}"
        data-sizes="auto"
        alt="{{ image.alt }}"
        >     
      </div>      
          <div class="first-row-text">        
            <p class="first-title np-h3 np-h3-italic">{{block.settings.first-row-title}}</p>            
            <p class="first-paragraph np-h5">{{ block.settings.first-row-text }}</p>        
            <div class="first-text-button">            
              <a href="{{ block.settings.first-button-url }}">
          {{ block.settings.first-button-text}}
            </a>            
              <div class="border-bottom">            
              </div>       
            </div>        
            <div class="first-row-mobile-button np-h6">          
              <a href="{{ block.settings.first-button-url }}">
                {{ block.settings['first-row-mobile-button-text'] }}
          </a>        
            </div>      
          </div>    
    </div>    
    <div class="second-row">      
      <div class="second-row-text">        
        <p class="second-title np-h3 np-h3-italic">{{block.settings.second-row-title}}</p>
        <p class="second-paragraph np-h5">{{ block.settings.second-row-text }}</p>       
        <div class="second-text-button">                    
          <a href="{{ block.settings.second-button-url }}"> 
            {{ block.settings.second-button-text}}
                    </a>                    
          <div class="border-bottom">                    
          </div>
        </div>
        <div class="second-row-mobile-button np-h6">          
          <a href="{{ block.settings.second-button-url }}">            {{ block.settings['second-row-mobile-button-text'] }}
          </a>        
        </div>      
      </div>      
      <div class="second-row-image">            
        {% comment %} <img class="second-row-image-{{ block.id }}" src="{{ block.settings.second-row-image| img_url: "master" }}">       {% endcomment %}
        {% liquid assign image = block.settings.second-row-image %}
        {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
        <img class="second-row-image-{{ block.id }} lazyload"
        data-src="{{ img_url }}"
        data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
        data-aspectratio="{{ image.aspect_ratio }}"
        data-sizes="auto"
        alt="{{ image.alt }}"
        >
      </div>   
    </div>  
  </div>  
          
          {% when 'spacer-block' %}
    <div class="spacer-{{ block.id }}">    </div>{% endcase %}
{% endfor %}
