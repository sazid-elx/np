<section class="section-{{ section.id }} section-{{ section.id }}-padding section-width-{{ section.settings.section-width }} ">
    <div class="grid-container-nel-{{ section.id }}">
        <div class="grid-item-nel">
          {% if section.settings.image1 %}
            {% comment %} <img class="img" src=" {{ section.settings.image1 | img_url: 'master' }} " alt="" height="" width="" loading="lazy"> {% endcomment %}
            {% liquid assign image = section.settings.image1 %}
            {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
            <img class="img lazyload"
            data-src="{{ img_url }}"
            data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
            data-aspectratio="{{ image.aspect_ratio }}"
            data-sizes="auto"
            alt="{{ image.alt }}"
            >
            {% if section.settings.caption-image-one %}
              <p>{{ section.settings.caption-image-one }}</p>
            {% endif %}   
        {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %} 
        </div>
        <div class="grid-item-nel"> <p></p> </div>
        <div class="grid-item-nel">
            <div class="firstpara">
              {% for block in section.blocks %}
                {% case block.type %}
                {%- when 'right-spacer' -%}
                  <div class="right-space-container-{{ block.id }}">
                  </div> 
                {% when "heading" %}
                    <h3 class="right-custom-heading-font-size-{{ block.id }} right-head-pos">{{ block.settings.right-heading }}</h3>
                {% when "text" %}
                    <p class="ps-text right-custom-text-font-size-{{ block.id }}"> {{ block.settings.right-text | replace: 'p>', 'span>' }}</p>

                        
                {% endcase %} 
              {% endfor %}


            </div> 

        </div>
        <div class="grid-item-nel"><p></p></div>
        <div class="grid-item-nel mt_el">
          <div class="secondimg ">
            {% if section.settings.image2 %}
              {% comment %} <img class="img" src=" {{ section.settings.image2 | img_url: 'master' }} " alt="" height="" width="" loading="lazy"> {% endcomment %}
              {% liquid assign image = section.settings.image2 %}
              {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
              <img class="img lazyload"
              data-src="{{ img_url }}"
              data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
              data-aspectratio="{{ image.aspect_ratio }}"
              data-sizes="auto"
              alt="{{ image.alt }}"
              >
              {% if section.settings.caption-image-two %}
                <p>{{ section.settings.caption-image-two }}</p>
              {% endif %}   
          {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %} 
        </div>
        </div>
        <div class="grid-item-nel">
          <div class="secondpara">
            {% for block in section.blocks %} 
              {% case block.type %} 
                  {% when "heading" %}
                      <h3 class="left-custom-heading-font-size-{{ block.id }} left-head-pos">{{ block.settings.left-heading }}</h3>
                  {% when "text" %}
                      <p class="ps-text left-custom-text-font-size-{{ block.id }}"> {{ block.settings.left-text | replace: 'p>', 'span>' }}</p>
                  {% when "caption" %}
                      <a href="{{ block.settings.caption-url }}"><p class=" left-custom-caption-font-size-{{ block.id }} left-cap-pos"> {{ block.settings.left-caption }}</p></a>
                  {%- when 'left-spacer' -%}
                      <div class="left-space-container-{{ block.id }}">   
                      </div>
                          
              {% endcase %} 
            {% endfor %}
            
          </div> 

        </div>
        <div class="grid-item-nel"><p></p></div>
      </div>


</section>

