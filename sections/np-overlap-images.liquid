{%- style -%}
 /* dynamic */
 .section-{{ section.id }}-padding {
      padding-left: 50px;
      padding-right: 50px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    }
    .section-{{ section.id }}.section-width-small {
        max-width: 600px;
        margin: 0 auto;
    }
    .section-{{ section.id }}.section-width-medium {
        max-width: 900px;
        margin: 0 auto;
    }
    .section-{{ section.id }}.section-width-full {
        max-width: 100%;
        margin: 10px auto;
    }
    .section-{{ section.id }}.section-width-custom {
        max-width: {{ section.settings.custom-section-width | append: "px" }};
        margin: 0 auto;
    }

    /* static css */
.section-{{ section.id }} a{
      text-decoration: none
}

.grid-container-nel-{{ section.id }} {
    display: grid;
    grid-template-columns: 43% 15% 42%;
    padding: 50px;
    width: 100%;
    margin: 0 auto;
  }

  .grid-container-nel-{{ section.id }} .grid-item-nel {
    padding: 5px;
    position: relative;
  }
  .grid-container-nel-{{ section.id }} .grid-item-nel:first-child{
    grid-row: span 2;
  }
  .grid-container-nel-{{ section.id }} .grid-item-nel:nth-child(5){
    grid-row: span 2;
  }
  .grid-container-nel-{{ section.id }} .grid-item-nel img{
    width: 100%;
  }

  .grid-container-nel-{{ section.id }} .grid-item-nel .firstpara {     
    position: absolute;
    right: 126px;

  }
  
  .grid-container-nel-{{ section.id }} .grid-item-nel .firstpara p{
    text-align: left;
  }
  .grid-container-nel-{{ section.id }} .grid-item-nel .secondpara {
    position: absolute;
    left: 10%;
  }
  .grid-container-nel-{{ section.id }} .grid-item-nel .secondpara p{
    text-align: left;
  }

.grid-container-nel-{{ section.id }} .grid-item-nel.mt_el{
    margin-top: 100px;
}

