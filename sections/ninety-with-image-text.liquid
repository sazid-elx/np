{%- style -%}
    /* static */
  .flex-two-col-el {
    display: flex;
    justify-content: center;
    align-items: center;    
  }  
  
  .section-{{ section.id }} .image-container-wrapper-el {
    width: {{ section.settings.custom-image-width }}px;
  }
  
  .section-{{ section.id }} .image-container-wrapper-el img {
    display: block;
    width: 100%;
  }
  .section-{{ section.id }} .image-container-wrapper-el p{
    text-align:left;
    margin-top: 0px;
  }
  
  
  /* dynamic */
    .section-{{ section.id }}-padding {
      padding-left: 50px;
      padding-right: 50px;      
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    }
    .section-{{ section.id }}.section-width-small {
        max-width: 600px;
        margin: 0 auto;
    }
    .section-{{ section.id }}.section-width-medium {
        max-width: 900px;
        margin: 0 auto;
    }
    .section-{{ section.id }}.section-width-full {
        max-width: 100%;
        margin: 15px auto;
    }
    .section-{{ section.id }}.section-width-custom {
        max-width: {{ section.settings.custom-section-width | append: "px" }};
        width: 100%;
        margin: 0 auto;
    }
    .col-gap-el-{{ section.id }} {
        column-gap: {{ section.settings.column-gap | append: "px" }};

    }
    .row-reverse-{{ section.id }} {
          flex-direction: row-reverse;
       }

  {% for block in section.blocks %}
    .space-container-{{ block.id }}{
            height: {{ block.settings.spacer-height }}px;
            padding: 0px;
    }
    .custom-heading-font-size-{{ block.id }} {
        font-size:{{ block.settings.heading-size }}px;
        margin-top: 0;
        margin-bottom: 0;
        font-family: {{ block.settings.heading-font-family }};
        font-weight: {{ block.settings.heading-font-weight }};
        color: {{ block.settings.heading-font-color }};
        line-height: {{ block.settings.heading-line-height }} 
    }
    .custom-text-font-size-{{ block.id }} {
        width:{{ block.settings.text-block-width }}px;
        font-size:{{ block.settings.text-size }}px;
        margin-top: 0;
        margin-bottom: 0;
        font-family: {{ block.settings.text-font-family }};
        font-weight: {{ block.settings.text-font-weight }};
        color: {{ block.settings.text-font-color }};
        line-height: {{ block.settings.text-line-height }} 
    }
    .custom-caption-font-size-{{ block.id }} {
        font-size:{{ block.settings.caption-size }}px;
        margin-top: 0;
        margin-bottom: 0;
        font-family: {{ block.settings.caption-font-family }};
        font-weight: {{ block.settings.caption-font-weight }};
        color: {{ block.settings.caption-font-color }};
        line-height: {{ block.settings.caption-line-height }} 
    }

  {% endfor %}

  /* screen from 769 - 1300 */
   @media only screen and (max-width: 1250px) and (min-width: 768px){
    .flex-two-col-el{
      width: 100%;
    }
    .col-gap-el-{{ section.id }} {
        column-gap: 30px

    }


    .image-container-wrapper-el , .text-container-wrapper-el {
      width: 100%
    }

    .section-{{ section.id }} .image-container-wrapper-el img {
    display: block;
    width: 100%;
  }
    .image-container-wrapper-el img {
      display: block;
      width: 100%;
      margin: 0 auto;
    }
    .text-container-wrapper-el h2{
      font-size: 64px;
    }
    .text-container-wrapper-el p{
      font-size: 16px;
    } 
    .text-container-wrapper-el h2 , .text-container-wrapper-el p{
      width: 100%

    }
    {% for block in section.blocks %}
    .space-container-{{ block.id }}{
            height: 70px;
            padding: 0px;
    }
    {% endfor %}

}
   @media only screen and (max-width: 768px) {
    .section-{{ section.id }}{
      padding: 25px 25px;
      overflow-x: hidden;
      width: 100%;
    }
    .flex-two-col-el{
      flex-direction: column;
      width: 100%;
    }
    .text-container-el{
      margin: 50px 0;
    }

    .image-container-wrapper-el , .text-container-wrapper-el {
      width: 100%
    }
    .section-{{ section.id }} .image-container-wrapper-el p{
    text-align:center;
    margin-top: 0px;
  }
    .section-{{ section.id }} .image-container-wrapper-el img {
    display: block;
    width: 75%;
  }
    .image-container-wrapper-el img {
      display: block;
      width: 80%;
      margin: 0 auto;
    }
    .text-container-wrapper-el h2{
      font-size: 72px;
    }
    .text-container-wrapper-el p{
      font-size: 22px;
    } 
    .text-container-wrapper-el h2 , .text-container-wrapper-el p{
      width: 100%

    }
    

    {% for block in section.blocks %}
      /* mobile version */
    .section-{{ section.id }} .custom-heading-font-size-{{ block.id }} {
        font-size:{{ block.settings.mobile-heading-size }}px;
        line-height: {{ block.settings.mobile-heading-line-height }} 
    }
    .section-{{ section.id }} .custom-text-font-size-{{ block.id }} {
        width: 100%;
        margin: auto;
        font-size:{{ block.settings.mobile-text-size }}px;
        line-height: {{ block.settings.mobile-text-line-height }} 
    } 

    .space-container-{{ block.id }}{
            height: 40px;
            padding: 0px;
    }
      
    {% endfor %}
    



    
}


  /* mobile screen responsive */
  @media only screen and (max-width: 768px) {
    .section-{{ section.id }}{
      padding: 25px 25px;
      overflow-x: hidden;
      width: 100%;
    }
    .flex-two-col-el{
      flex-direction: column;
      width: 100%;
    }
    .text-container-el{
      margin: 50px 0;
    }

    .image-container-wrapper-el , .text-container-wrapper-el {
      width: 100%
    }
    .section-{{ section.id }} .image-container-wrapper-el p{
    text-align:center;
    margin-top: 0px;
  }
    .section-{{ section.id }} .image-container-wrapper-el img {
    display: block;
    width: 75%;
  }
    .image-container-wrapper-el img {
      display: block;
      width: 80%;
      margin: 0 auto;
    }
    .text-container-wrapper-el h2{
      font-size: 72px;
    }
    .text-container-wrapper-el p{
      font-size: 22px;
    } 
    .text-container-wrapper-el h2 , .text-container-wrapper-el p{
      width: 100%

    }
    

    {% for block in section.blocks %}
      /* mobile version */
    .section-{{ section.id }} .custom-heading-font-size-{{ block.id }} {
        font-size:{{ block.settings.mobile-heading-size }}px;
        line-height: {{ block.settings.mobile-heading-line-height }} 
    }
    .section-{{ section.id }} .custom-text-font-size-{{ block.id }} {
        width: 100%;
        margin: auto;
        font-size:{{ block.settings.mobile-text-size }}px;
        line-height: {{ block.settings.mobile-text-line-height }} 
    } 
      
    {% endfor %}
    



    
}


{%- endstyle -%}

<section class="section-{{ section.id }} section-{{ section.id }}-padding section-width-{{ section.settings.section-width }} ">
    <div class="flex-two-col-el col-gap-el-{{ section.id }} {% if section.settings.row_reverse %}row-reverse-{{ section.id }}{% endif %}">
        <div class="image-container-el">
            <div class="image-container-wrapper-el">
              {% if section.settings.image %}
                  {% comment %} <img class="img" src=" {{ section.settings.image | img_url: 'master' }} " alt="" height="" width="" loading="lazy"> {% endcomment %}
                  {% liquid assign image = block.settings.image %}
                  {% liquid assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                  <img class="img lazyload"
                  data-src="{{ img_url }}"
                  data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2160, 2600, 3000, 3400, 3800, 4100]"
                  data-aspectratio="{{ image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ image.alt }}"
                  >
                  {% if section.settings.caption-image %}
                    <p>{{ section.settings.caption-image }}</p>
                  {% endif %}   
              {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %} 
            </div>         

        </div>
  
        <div class="text-container-el">
          <div class="text-container-wrapper-el">
        {% for block in section.blocks %} 
            {% case block.type %} 
                {% when "heading" %}
                    <h2 class="custom-heading-font-size-{{ block.id }}">{{ block.settings.heading }}</h2>
                {% when "text" %}
                    <p class="ps-text custom-text-font-size-{{ block.id }}"> {{ block.settings.text | replace: 'p>', 'span>' }}</p>
                {%- when 'spacer' -%}
                    <div class="space-container-{{ block.id }}">                           
                    </div>
                    
    
            {% endcase %} 
        {% endfor %}

          </div>
        </div>
      </div>


</section>

